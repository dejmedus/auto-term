{
  "name": "auto-term-tabs",
  "displayName": "Auto Terminal",
  "description": "Setup and manage terminal tabs",
  "repository": "https://github.com/dejmedus/auto-term",
  "bugs": {
    "url": "https://github.com/dejmedus/auto-term/issues"
  },
  "version": "0.0.7",
  "pricing": "Free",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "images/icon.png",
  "publisher": "dejmedus",
  "license": "MIT",
  "keywords": [
    "terminal",
    "tabs"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "enabledApiProposals": [
    "terminalShellIntegration",
    "terminalExecuteCommandEvent"
  ],
  "contributes": {
    "jsonValidation": [
      {
        "fileMatch": "terminal.config.json",
        "url": "./out/lib/schema.json"
      }
    ],
    "configuration": {
      "title": "Auto Terminal",
      "properties": {
        "autoTerminal.runOpenCommandsOnStartup": {
          "type": "boolean",
          "default": false,
          "description": "Automatically run 'open' terminal actions when a workspace is opened "
        },
        "autoTerminal.customTemplates": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "additionalProperties": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "tab": {
                    "type": "string",
                    "description": "Name of the terminal tab"
                  },
                  "commands": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    },
                    "description": "Commands to be executed in this tab"
                  },
                  "description": {
                    "type": "string",
                    "description": "Description of the commands"
                  }
                },
                "required": [
                  "tab",
                  "commands"
                ]
              }
            }
          },
          "default": {}
        }
      }
    },
    "commands": [
      {
        "command": "extension.action",
        "title": "Auto Term: Action"
      },
      {
        "command": "extension.showUsageGuide",
        "title": "Auto Term: Show Usage Guide"
      },
      {
        "command": "extension.getTemplate",
        "title": "Auto Term: Template"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "extension.action",
          "when": "view == terminal",
          "group": "navigation",
          "title": "Terminal Action"
        }
      ]
    },
    "walkthroughs": [
      {
        "id": "auto-terminal-walkthrough",
        "title": "Auto Terminal",
        "description": "How to setup and use Auto Terminal.",
        "steps": [
          {
            "id": "setup-terminal-configuration",
            "title": "Setup Terminal Configuration",
            "description": "Create your terminal.config.json file, or choose a template.",
            "completionEvents": [
              "onFileCreated:terminal.config.json"
            ],
            "media": {
              "image": "./images/walkthrough-config-file.png",
              "altText": "Setup Terminal Configuration"
            }
          },
          {
            "id": "changesetting",
            "title": "Change Setting",
            "description": "This step will change a setting and check off when the setting has changed\n[Change Setting](command:autoTerminal.runOpenCommandsOnStartup)",
            "media": {
              "markdown": "markdown.md"
            },
            "completionEvents": [
              "onSettingChanged:autoTerminal.runOpenCommandsOnStartup"
            ]
          },
          {
            "id": "run-commands",
            "title": "Run Commands",
            "description": "Use command `Auto Terminal: Action` to select an action to run.",
            "completionEvents": [
              "onCommandExecuted:Auto Terminal: Action"
            ],
            "media": {
              "image": "./images/walkthrough-action.png",
              "altText": "Setup Terminal Configuration"
            }
          },
          {
            "id": "auto-run-on-startup",
            "title": "Auto Run Commands on Startup",
            "description": "Enable the `Auto Terminal: Run Open Commands On Startup` setting in your workspace settings to automatically execute commands specified under the 'open' action in your `terminal.config.json` file when you open your workspace.",
            "media": {
              "image": "./images/walkthrough-config-file.png",
              "altText": "Setup Terminal Configuration"
            }
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "precompile": "mkdir -p out/templates; mkdir -p out/lib",
    "compile": "tsc -p ./",
    "postcompile": "cp -r src/templates/* out/templates; cp -r src/lib/schema.json out/lib",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "copyfiles": "^2.4.1",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  }
}
